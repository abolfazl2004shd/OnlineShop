@model Product
<div class="col-sm-6 col-md-4 col-lg-3">
    <div class="box">
        <a href="">
            <div class="img-box">
                <img src="~/Images/p1.png" alt="">
            </div>
            <div class="detail-box">
                <h6>
                  @Model.ProductName
                </h6>
                <h6>
                    Price
                    <span>
                        $@Model.Price
                    </span>
                </h6>
            </div>
            <div class="new">
                <span>
                    New
                </span>
            </div>
        </a>
    </div>
</div>