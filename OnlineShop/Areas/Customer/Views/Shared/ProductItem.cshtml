@model Product

<div class="col-sm-6 col-md-4 col-lg-3">
    <div class="box">
        <a asp-area="Customer" asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId">
            <div class="img-box">
                <img src="~/Images/p1.png" alt="@Model.ProductName">
            </div>
            <div class="detail-box">
                <h6>
                    @Model.ProductName
                </h6>
                
                <h6>
                    Price
                  @*   <span class ="text-decoration-line-through">
                        $@Model.Price.FormatDecimal()
                    </span> *@
                    <span >
                        $@Model.GetFinalPrice()
                    </span>
                </h6>
            </div>
            <div class="new">
                <span>
                    New
                </span>
            </div>
        </a>
    </div>
</div>