@model Product

<div class="col-sm-6 col-md-4 col-lg-3">
    <div class="box">
        <a asp-area="" asp-controller="Home" asp-action="Details" asp-route-id="@Model.ProductId">
            <div class="img-box">
                <img src="~/Images/p1.png" alt="">
            </div>
            <div class="detail-box">
                <h6>
                    @Model.ProductName
                </h6>
                <h6>
                    Price
                    <span>
                        $@Model.Price.FormatDecimal()
                    </span>
                </h6>
            </div>
            <div class="new">
                <span>
                    New
                </span>
            </div>
        </a>
    </div>
</div>