@page
@model OnlineShop.Areas.Admin.Pages.DisplayCustomersModel
@{
}




<table class="table table-striped table-dark table-bordered">
    <tr>
        <th>UserName</th>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Email</th>
        <th></th>

    </tr>

    @foreach (var customer in Model.Customers)
    {
        <tr>
            <td>@customer.UserName</td>
            <td>@customer.FirstName</td>
            <td>@customer.LastName</td>
            <td>@customer.EmailAddress</td>
            <td>
                <a class="btn btn-danger" asp-area="Admin" asp-page="DeleteCustomer" asp-route-id="@customer.CustomerId">Delete</a>
            </td>
        </tr>
    }
</table>