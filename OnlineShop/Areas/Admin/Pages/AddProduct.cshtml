@page
@model OnlineShop.Areas.Admin.Pages.AddProductModel
@{
}


<h1>Create Product</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Product.ProductName"></label>
        <input asp-for="Product.ProductName" class="form-control" />
        <span asp-validation-for="Product.ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.ImageSrc"></label>
        <input asp-for="Product.ImageSrc" class="form-control" />
        <span asp-validation-for="Product.ImageSrc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Size"></label>
        <input asp-for="Product.Size" class="form-control" />
        <span asp-validation-for="Product.Size" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Color"></label>
        <input asp-for="Product.Color" class="form-control" />
        <span asp-validation-for="Product.Color" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Discount"></label>
        <input asp-for="Product.Discount" class="form-control" />
        <span asp-validation-for="Product.Discount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Description"></label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Amount"></label>
        <input asp-for="Product.Amount" class="form-control" />
        <span asp-validation-for="Product.Amount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Price"></label>
        <input asp-for="Product.Price" class="form-control" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
